<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
						 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
						 
<mapper namespace="boardSQL">

	<insert id="boardWrite" parameterType="board">
		insert into board(seq, id, name, email, subject, content, ref)
		values(seq_board.nextval, #{id},#{name},#{email},#{subject},#{content},seq_board.currval)
	</insert>
	
	<select id="getTotalArticle">
		select count(*) from board
	</select>

	<!-- <select id="getBoardList" parameterType="java.util.Map" resultType="board">
		select * from (select rownum rn, tt.* from 
		(select * from board order by ref desc)tt) 
		where rn>=#{endNum} and rn<=#{startNum}
	</select> -->
	
	<select id="getBoard" parameterType="java.lang.Integer" resultType="board">
		select * from board where seq = #{seq}
	</select>
	
	<update id="boardModify" parameterType="java.util.Map">
	 	update board set subject=#{subject}, content=#{content}, seq=#{seq}
	</update>
	
	<update id="boardHit" parameterType="java.lang.Integer">
		update board set hit=hit+1 where seq=#{seq}
	</update>
	
</mapper>