<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
						 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="imageboardSQL">

	<insert id="imageboardWrite" parameterType="imageboard">
		insert into
		imageboard values(seq_imageboard.nextval
		, #{imageId}
		, #{imageName}
		, #{imagePrice}
		, #{imageQty}
		, #{imageContent}
		, #{image1}
		, sysdate)
	</insert>

	<select id="imageboardList" parameterType="java.util.Map" resultType="imageboard">
		<![CDATA[
		select * from
		(select rownum rn, tt.* from
		(select * from imageboard order by seq desc) tt)
		where rn >= #{startNum} and rn <= #{endNum}
		]]>
	</select>
	
	<select id="imageboardView" parameterType="int" resultType="imageboard">
		select * from imageboard where seq = #{seq}
	</select>
	
	<delete id="imageboardDelete" parameterType="int">
		delete from imageboard where seq = #{seq}
	</delete>


</mapper>