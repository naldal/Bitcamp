<script type="text/javascript">
function mode(num) {
	if(num==1) {
		document.boardViewForm.method = 'post';
		document.boardViewForm.action = 'boardModifyForm.jsp';
		document.boardViewForm.submit();
	} else if(num==2) {
		document.boardViewForm.method = 'post';
		//document.boardViewForm.action = 'boardDelete.jsp';
		document.boardViewForm.submit();
	}
}
</script>
